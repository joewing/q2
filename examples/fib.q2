
; Compute the largest Fibonacci number that fits in 12 bits.
fib:
    lda   #1
    sta   fib1
    sta   fib2
fib_loop:
    lda   fib1
    add   fib2
    jnf   fib_cont
    lda   fib2
    hlt   #0
fib_cont:
    sta   fib3
    lda   fib2
    sta   fib1
    lda   fib3
    sta   fib2
    jmp   fib_loop
fib1:
    .dw   0
fib2:
    .dw   0
fib3:
    .dw   0

